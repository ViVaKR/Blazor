@page "/"
@rendermode InteractiveServer
@inject NavigationManager navigationManager

<PageTitle>Home</PageTitle>

<div class="home-container grid grid-cols-1 gap-2 px-3 py-8">

    <h3 class="text-slate-500">@message</h3>

    <div class="flex flex-col px-2 py-4">

        <p class="line-clamp-3 text-rose-800">
            This is a long text that will be truncated after three lines...
        </p>

        <div class="flex gap-2 w-full justify-center items-center">
            <button
                    @onclick=ClickMe
                    class="px-4 bg-teal-500
                rounded-lg py-2 my-4 mx-4 text-white
                hover:bg-rose-500">
                Click me
            </button>

            <button
                    @onclick=GoTo
                    class="px-4 bg-teal-500 rounded-lg py-2 my-4 mx-4 text-white hover:bg-rose-500">
                Go to Chat
            </button>

        </div>
    </div>

</div>

@code {

    private string message = "Welcome to Iam";

    private void GoTo()
    {
        navigationManager.NavigateTo("/chat");
    }

    private void ClickMe()
    {
        message = "You clicked me!";
    }
}
