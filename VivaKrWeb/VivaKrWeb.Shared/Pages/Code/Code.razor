@* HTML Start *@

<nav class="navbar bg-primary navbar-expand-lg" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Features</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Pricing</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" aria-disabled="true">Disabled</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <form class="d-flex" role="search">
      <input class="form-control me-2" type="search" placeholder="Search"
             aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
</nav>
<div
     class="w-full h-auto grid grid-cols-2 gap-4 gap-y-4 bg-sky-200 px-2 py-2">

  @* Left (1) *@

  <div>
    <label for="detaInput">Datalist</label>
    <input type="text" class="form-control" list="datalistOptions"
           id="detaInput"
           placeholder="Type to search...">
    <datalist id="datalistOptions">
      @foreach (var item in dataItems)
      {
        <option value="@item" class="font-poppins" />
      }
    </datalist>

  </div>

  <div>
    <div class="accordion" id="accordionExample">

      @foreach (var item in dataList)
      {
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button"
                    data-bs-toggle="collapse" data-bs-target="#@item.Target"
                    aria-expanded="false" aria-controls="@item.Target">
              @item.Title
            </button>
          </h2>
          <div id="@item.Target" class="accordion-collapse collapse"
               data-bs-parent="#accordionExample">
            <div class="accordion-body">
              @((MarkupString)item.Content)
            </div>
          </div>
        </div>
      }

    </div>

  </div>

  @* Right (2) *@
  <div>
    <p class="bg-slate-300 px-2 py-2 rounded-lg">@Id</p>
    <button
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
            @onclick="@(async () => await NavigateToPage("/Code/Code", 8947))">Go
