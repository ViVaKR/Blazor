<div class="top-row navbar navbar-dark !bg-sky-950">
    <div class="container-fluid">
        <a class="navbar-brand mx-auto tracking-widest" href="/">ViVaKR</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable"
     onclick="document.querySelector('.navbar-toggler').click()">
    <nav
         class="flex-col
         bg-gradient-to-b
         from-sky-950
         via-yellow-800
         to-teal-600

         h-screen">
        @foreach (var item in MenuItems)
        {
            <div class="nav-item px-2">
                <NavLink class="nav-link px-4
                        font-poppins
                        hover:!text-rose-400
                        text-md tracking-wide"
                         href="@item.Url"
                         Match="NavLinkMatch.All">
                    <span class="material-symbols-outlined mr-4">
                        @item.Icon
                    </span>
                    @item.Text
                </NavLink>
            </div>
        }
    </nav>
</div>
